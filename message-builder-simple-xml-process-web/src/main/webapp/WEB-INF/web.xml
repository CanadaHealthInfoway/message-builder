<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
		 version="2.5">
	<display-name>Message Builder Simple XML Processor</display-name>
	
	<servlet>
    	<servlet-name>SimpleXmlProcessingServlet</servlet-name>
    	<servlet-class>
        	ca.infoway.messagebuilder.simple.xml.servlet.SimpleXmlProcessingServlet
	    </servlet-class>
	</servlet>

	<servlet-mapping>
    	<servlet-name>SimpleXmlProcessingServlet</servlet-name>
	    <url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>	
