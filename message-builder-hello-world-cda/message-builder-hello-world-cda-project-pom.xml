<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>ca.infoway.messagebuilder</groupId>
	<artifactId>message-builder-hello-world-cda-project</artifactId>
	<packaging>jar</packaging>
	<version>1.0</version>
	<name>Message Builder Deployer</name>

	<dependencies>
		<dependency>
			<groupId>ca.infoway.messagebuilder</groupId>
			<artifactId>message-builder-core</artifactId>
			<version>1.6.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>ca.infoway.messagebuilder</groupId>
			<artifactId>message-builder-ccda-r1_1</artifactId>
			<version>1.6.2-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>./</sourceDirectory>
		<resources>
			  <resource>
			    <directory>./</directory>
			    <filtering>false</filtering>
			    <includes>
			      <include>**/*.xml</include>
			    </includes>
			  </resource>
		</resources>
	</build>
	
	<repositories>
		<repository>
			<id>infoway-public-release</id>
            <name>infoway-public-release</name>
            <url>https://infoapp.infoway-inforoute.ca/repo/public-release/</url>                   
		</repository>    
	</repositories>                

</project>

